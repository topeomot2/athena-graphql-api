{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,   
    "skipLibCheck": true,
    "baseUrl": ".",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"],
}
